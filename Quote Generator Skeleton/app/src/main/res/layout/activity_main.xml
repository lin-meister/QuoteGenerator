<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.acmhack.ucla.quotegenerator.MainActivity">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bruin_bear"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textSize="25dp"
        android:textColor="#01184A"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="UCLA Professor Quote Generator" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bruin_accent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Select a professor and then press generate to get a quote."
        android:id="@+id/quote_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Smallberg"
                android:id="@+id/smallberg_text" />
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:background="#fff"
                android:textColor="#000"
                android:scaleType="fitCenter"
                android:src="@drawable/smallberg"
                android:id="@+id/smallberg_button" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="vertical"
            android:baselineAligned="false">
            <!-- Insert Second Professor Text View and ImageButton -->

            <TextView
                android:text="Nachenberg"
                android:layout_width="match_parent"
                android:id="@+id/nachenberg_text"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="#000" />

            <ImageButton
                app:srcCompat="@drawable/nachenberg"
                android:id="@+id/nachenberg_button"
                android:scaleType="fitCenter"
                android:background="#fff"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:adjustViewBounds="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- Insert Third Professor Text View and ImageButton -->
            <TextView
                android:text="Miodrag "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/miodrag_text"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="#000" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/miodrag"
                android:id="@+id/miodrag_button"
                android:scaleType="fitCenter"
                android:background="#fff"
                android:adjustViewBounds="true"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:text="Generate"
        android:background="#FDC511"
        android:layout_height="40dp"
        android:id="@+id/generate_button" />
</LinearLayout>
